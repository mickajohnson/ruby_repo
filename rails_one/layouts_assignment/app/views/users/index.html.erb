<% content_for :users do %>
  <h1>All Users</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Favorite Language</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user|%>
      <tr>
        <td><%=user.first_name%></td>
        <td><%=user.last_name%></td>
        <td><%=user.favorite_language%></td>
      </tr>
      <%end%>
    </tbody>
  </table>
<%end%>
<% content_for :new_user do %>
  <h1>New User</h1>
  <form action="/" method="post">
    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
    <div class="form-group">
      <label for="first_name">First name</label>
      <input class="form-control" type="text" name="first_name">
    </div>
    <div class="form-group">
      <label for="last_name">Last name</label>
      <input class="form-control" type="text" name="last_name">
    </div>
    <div class="form-group">
      <label for="favorite_language">Favorite Language</label>
      <input class="form-control" type="text" name="favorite_language">
    </div>
    <input class="btn btn-primary" type="submit" name="" value="Submit">
  </form>
  <a href="/posts" class="btn btn-info">All Posts</a>
<%end%>
