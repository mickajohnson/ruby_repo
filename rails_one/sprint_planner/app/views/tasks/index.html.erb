        <td><form action="/" method="post">
              <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
              <input type="hidden" name="_method" value="PATCH">
              <input type="hidden" name="new_status" value="done">
              <input type="hidden" name="task" value="<%=task.id%>">
              <input class="btn btn-success" type="submit" value="Done">
            </form>
        </td>
      </tr>
      <%end%>
    </tbody>
  </table>
</div>
<div class="task-area">
  <h3 class="text-center">Done</h3>
  <hr>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Description</th>
        <th>Due Date</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @done.each do |task|%>
      <tr>
        <td><div class="<%=task.priority%>"></div> <%=task.description%></td>
        <td><%=task.due_date.strftime("%B %d %Y")%></td>
