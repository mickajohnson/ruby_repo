              <input type="hidden" name="task" value="<%=task.id%>">
              <input class="btn btn-warning" type="submit" value="Hide">
            </form>
        </td>
      </tr>
      <%end%>
    </tbody>
  </table>
</div>
<a href="/new" class="btn btn-info">Create New</a>
