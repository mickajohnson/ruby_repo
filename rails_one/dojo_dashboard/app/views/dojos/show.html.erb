<h1><%=@dojo.branch%></h1>
<h3>Address: <%=@dojo.street%></h3>
<h3>City: <%=@dojo.city%> State: <%=@dojo.state%></h3>
<h2>Student Roster</h2>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <%@dojo.students.each do |student|%>
    <tr>
      <td><%=student.first_name%></td>
      <td><%=student.last_name%></td>
      <td><%=student.email%></td>
      <td><a href="/dojos/<%=@dojo.id%>/students/<%=student.id%>">Show</a> | <a href="/dojos/<%=@dojo.id%>/students/<%=student.id%>/edit">Edit</a> |
        <form action="/dojos/<%=@dojo.id%>/students/<%=student.id%>" method="post">
          <input type="hidden" name="authenticity_token" value="form_authenticity_token">
          <input type="hidden" name="_method" value="delete">
          <input class="btn btn-danger" type="submit" value="Destroy">
      </form></td>
    </tr>
    <%end%>
  </tbody>
</table>
<p><a href="/dojos/<%=@dojo.id%>/students/new">Add Student</a></p>
<p> <a href="/dojos">Home </a>| <a href="/dojos/<%=@dojo.id%>/edit">Edit</a></p>
