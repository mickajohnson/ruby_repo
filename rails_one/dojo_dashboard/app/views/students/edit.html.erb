<h1>Edit <%=@student.first_name%> <%=@student.last_name%></h1>
<%if flash[:errors]%>
  <%flash[:errors].each do |error|%>
  <p><%=error%></p>
  <%end%>
<%end%>
<form action="/dojos/<%=@dojo.id%>/students/<%=@student.id%>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH">
  <label for="first_name">
    First Name: <input type="text" name="student[first_name]" value="<%= @student.first_name %>">
  </label>
  <label for="last_name">
    Last Name: <input type="text" name="student[last_name]" value="<%= @student.last_name %>">
  </label>
  <label for="email">
    Email: <input type="text" name="student[email]" value="<%= @student.email %>">
  </label>
  <select name="dojo">
    <%@dojos.each do |dojo|%>
      <option value="<%=dojo.id%>"
        <%if dojo == @dojo%>
          selected="selected"
        <%end%>>
        <%=dojo.branch%></option>
    <%end%>
  </select>
  <input type="submit" class="btn btn-primary" value="Create">
</form>
<p><a href="/dojos">Home</a> | <a href="/dojos/<%=@dojo.id%>/students/<%=@student.id%>"><%=@student.first_name%></a></p>
